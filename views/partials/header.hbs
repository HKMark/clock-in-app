<header>
  <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark px-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">出勤打卡系統</a>
      {{#if user}}
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ms-auto mb-2 mb-md-0">
          {{#isEqual user.accountRole 'admin'}}
          <li class="nav-item">
            <a href="/admin" class="nav-link">Admin 後台</a>
          </li>
          {{/isEqual}}
          <li class="nav-item d-inline-flex align-items-center">
            <span class="text-white nav-link">Hi, {{ user.email }}</span>
          </li>
          <li class="nav-item">
            <a href="/logout"><button class="btn btn-outline-success my-sm-0 my-2">登出</button></a>
          </li>
        </ul>
      </div>
      {{/if}}
    </div>
  </nav>
